<h2>
    <i class="far fa-calendar-alt"></i>
    <%= @details[:date] %>
</h2>
<h1><%= @details[:title] %> for Alex and Dans Wedding!</h1>

<form action="/wedding/<%= @details[:id] %>/load2">

  <div class="form-group">
    <label>Your name</label>
    <input type="text" class="form-control" name="name">
  </div>
  <div class="form-group">
    <label>Choose Hotel</label>
    <select class="form-control" name="hotel">
      <option>The Inn at the Spanish Steps</option>
      <option>Hotel Hassler Roma</option>
      <option>Rome Marriott Grand Hotel Flora</option>
    </select>
  </div>
  <div class="form-group">
    <label>Email address</label>
    <input type="email" class="form-control" placeholder="name@example.com" name="email">
  </div>
  <div class="form-group">
    <label>Comments</label>
    <textarea class="form-control" rows="3" name="comments"></textarea>
  </div>
<button type="submit">Submit</submit>

</form>

